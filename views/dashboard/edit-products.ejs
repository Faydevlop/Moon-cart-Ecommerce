    function editImage(index, productId) {
    const event = window.event || arguments.callee.caller.arguments[0];

    // Prevent the default form submission behavior
    if (event) {
        event.preventDefault();
    }

    // Declare the file variable
    let file;

    // Change individual image
    const handleImageUpload = async () => {
        try {
            const { value } = await Swal.fire({
                title: 'Upload an Image',
                input: 'file',
                inputAttributes: {
                    accept: 'image/*',
                    'aria-label': 'Upload your profile picture',
                },
                showCancelButton: true,
                confirmButtonText: 'Upload',
                cancelButtonText: 'Cancel',
                showLoaderOnConfirm: true,
            });

            // Optional: If you need to use the file variable outside the preConfirm block
            if (value) {
                try {
                    // Assign the value to the file variable
                    file = value;

                    const formData = new FormData();
                    formData.append('image', file);
                    formData.append('productId', productId);

                    formData.append('index', index);

                    // Perform the fetch to upload the image
                    const response = await fetch('/admin/singleimage', {
                        method: 'POST',
                        body: formData,
                    });

                    if (response.ok) {
                        const result = await response.json();

                        Swal.fire({
                            title: 'Upload Successful!',
                            imageUrl: URL.createObjectURL(file),
                            imageAlt: 'Uploaded Image',
                            text: 'You have successfully uploaded the image.',
                            icon: 'success',
                        });
                        setTimeout(() => {
        window.location.reload();
    }, 500);
                    } else {
                        Swal.fire({
                            title: 'Upload Failed',
                            text: 'There was an issue uploading the image.',
                            icon: 'error',
                        });
                    }
                } catch (error) {
                    console.error('Error during upload:', error);
                    Swal.fire({
                        title: 'Error',
                        text: 'An error occurred during upload.',
                        icon: 'error',
                    });
                }
            }
        } catch (error) {
            console.error('Error opening Swal:', error);
        }
    };

    // Call the function to handle image upload
    handleImageUpload();

   
