    <script>
        function generateCouponCode() {
            const prefix = 'Ref'; // The first three characters
            const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
            const codeLength = 12; // Length of the remaining characters (12 total - 3 prefix)

            let couponCode = prefix;

            // Generate the remaining characters
            for (let i = 0; i < codeLength; i++) {
                const randomIndex = Math.floor(Math.random() * characters.length);
                couponCode += characters.charAt(randomIndex);
            }

            // Set the generated coupon code in the input field
            document.getElementById('couponCode').value = couponCode;
        }
        

        function validateForm() {
        // Reset error messages
        document.getElementById("couponCodeError").textContent = "";
        document.getElementById("discripetionError").textContent = "";
        document.getElementById("discountPercentageError").textContent = "";
        document.getElementById("maxDiscountAmountError").textContent = "";
        document.getElementById("minAmountError").textContent = "";
        document.getElementById("maxAmountError").textContent = "";
        document.getElementById("expiryDateError").textContent = "";

        // Validate Coupon Code
        const couponCode = document.getElementById("couponCode").value;
        if (couponCode.trim() === "") {
            document.getElementById("couponCodeError").textContent = "Coupon Code is required.";
            return;
        }

        // Validate Discription
        const discripetion = document.getElementById("discripetion").value;
        if (discripetion.trim() === "") {
            document.getElementById("discripetionError").textContent = "Discription is required.";
            return;
        }

        // Validate Discount Percentage
        const discountPercentage = document.getElementById("discountPercentage").value;
        if (discountPercentage.trim() === "") {
            document.getElementById("discountPercentageError").textContent = "Discount Percentage is required.";
            return;
        }

        const parsedDiscountPercentage = parseFloat(discountPercentage);
        if (isNaN(parsedDiscountPercentage) || parsedDiscountPercentage < 0 || parsedDiscountPercentage > 100) {
            document.getElementById("discountPercentageError").textContent = "Discount Percentage must be between 0 and 100.";
            return;
        }

        // Validate Max Discount Amount
        const maxDiscountAmount = document.getElementById("maxDiscountAmount").value;
        if (maxDiscountAmount.trim() === "") {
            document.getElementById("maxDiscountAmountError").textContent = "Max Discount Amount is required.";
            return;
        }

        // Validate Min Amount
        const minAmount = document.getElementById("minAmount").value;
        if (minAmount.trim() === "") {
            document.getElementById("minAmountError").textContent = "Min Amount is required.";
            return;
        }

        // Validate Max Amount
        const maxAmount = document.getElementById("maxAmount").value;
        if (maxAmount.trim() === "") {
            document.getElementById("maxAmountError").textContent = "Max Amount is required.";
            return;
        }

        // Validate Expiry Date
        const expiryDate = document.getElementById("expiryDate").value;
        if (expiryDate.trim() === "") {
            document.getElementById("expiryDateError").textContent = "Expiry Date is required.";
            return;
        }

        // If all validations pass, submit the form
        document.getElementById("couponForm").submit();
        submitFormData();
    }

