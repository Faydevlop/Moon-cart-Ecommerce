                    <form id="productDiscountForm" action="/admin/offerpost" method="post">
                        <div class="mb-3">
                            <label for="productName" class="form-label">Offer Name</label>
                            <input type="text" class="form-control" id="productName" name="offername" required>
                            <span id="productNameError" style="color: red;"></span>
                        </div>
        
                        <div class="mb-3">
                            <label for="selectionType" class="form-label">Select Type</label>
                            <select class="form-select" id="selectionType" name="type" required>
                                <option value="product">Product</option>
                                <option value="category">Category</option>
                            </select>
                        </div>
        
                        <div class="mb-3" id="productSelection">
                            <label for="selectedProduct" class="form-label">Select Product</label>
                            <select class="form-select" id="selectedProduct" name="selectedtype" required>
                                <% if(products && products.length > 0) { %>
                                    <% products.forEach(function(product) { %>
                                        <option value="<%= product.id %>"><%= product.name %></option>
                                    <% }); %>
                                <% } else { %>
                                    <option value="" disabled>No products available</option>
                                <% } %>
                          
                            </select>
                            <span id="selectedProductError" style="color: red;"class="error"></span>
                        </div>
        
                        <div class="mb-3" id="categorySelection" style="display:none;">
                            <label for="selectedCategory" class="form-label">Select Category</label>
                            <select class="form-select" id="selectedCategory" name="selectedCategory" required>
                                <% if(categories && categories.length > 0) { %>
                                    <% categories.forEach(function(category) { %>
                                        <option value="<%= category.id %>"><%= category.categoryname   %></option>
                                    <% }); %>
                                <% } else { %>
                                    <option value="" disabled>No categories available</option>
                                <% } %>
                            </select>
                            <span id="selectedCategoryError"style="color: red;" class="error"></span>
                        </div>
        
                        <div class="mb-3">
                            <label for="discountType" class="form-label">Discount Type</label>
                            <select class="form-select" id="discountType" name="discountType" required>
                                
                                <option value="percentage">Percentage(0 to 100)</option>
                            </select>
                            <span id="discountTypeError"style="color: red;" class="error"></span>
                        </div>
        
                        <div class="mb-3">
                            <label for="discountValue" class="form-label">Discount Value</label>
                            <input type="number" class="form-control" id="discountValue" name="discountValue" required>
                            <span id="discountValueError"style="color: red;" class="error"></span>
                        </div>
        
                        <div class="mb-3">
                            <label for="startDate" class="form-label">Start Date</label>
                            <input type="date" class="form-control" id="startDate" name="startDate" required>
                            <span id="startDateError"style="color: red;" class="error"></span>
                        </div>
        
                        <div class="mb-3">
                            <label for="endDate" class="form-label">End Date</label>
                            <input type="date" class="form-control" id="endDate" name="endDate" required>
                            <span id="endDateError"style="color: red;" class="error"></span>
                        </div>
        
                        <div class="mb-3">
                            <button type="button" class="btn btn-primary" onclick="submitForm()">Submit</button>
                        </div>
                    </form>
        
                   
