     function validateForm() {
    var productName = document.getElementById('productName').value;
    var selectedProduct = document.getElementById('selectedProduct').value;
    var selectedCategory = document.getElementById('selectedCategory').value;
    var discountType = document.getElementById('discountType').value;
    var discountValue = document.getElementById('discountValue').value;
    var startDate = document.getElementById('startDate').value;
    var endDate = document.getElementById('endDate').value;

    var isValid = true;

    if (productName === "") {
        document.getElementById('productNameError').innerText = "Please enter Offer Name";
        isValid = false;
    } else {
        document.getElementById('productNameError').innerText = "";
    }

    if (document.getElementById('selectionType').value === 'product' && selectedProduct === "") {
        document.getElementById('selectedProductError').innerText = "Please select a product";
        isValid = false;
    } else {
        document.getElementById('selectedProductError').innerText = "";
    }

    if (document.getElementById('selectionType').value === 'category' && selectedCategory === "") {
        document.getElementById('selectedCategoryError').innerText = "Please select a category";
        isValid = false;
    } else {
        document.getElementById('selectedCategoryError').innerText = "";
    }

    if (discountType === "") {
        document.getElementById('discountTypeError').innerText = "Please select a Discount Type";
        isValid = false;
    } else {
        document.getElementById('discountTypeError').innerText = "";
    }

    if (discountValue === "" || isNaN(discountValue) || discountValue < 0 || discountValue > 100) {
        document.getElementById('discountValueError').innerText = "Please enter a valid Discount Value between 0 and 100";
        isValid = false;
    } else {
        document.getElementById('discountValueError').innerText = "";
    }

    if (startDate === "") {
        document.getElementById('startDateError').innerText = "Please select Start Date";
        isValid = false;
    } else {
        document.getElementById('startDateError').innerText = "";
    }

    if (endDate === "") {
        document.getElementById('endDateError').innerText = "Please select End Date";
        isValid = false;
    } else {
        document.getElementById('endDateError').innerText = "";
    }

    return isValid;
}


